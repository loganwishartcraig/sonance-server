{
    "env": {
        "NODE_ENV": "development",
        "TS_NODE_PROJECT": "tsconfig.json"
    },
    "ext": "ts",
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "watch": [
        "src/"
    ],
    "verbose": true,
    "execMap": {
        "ts": "node --inspect=9230 --require ts-node/register"
    }
}
